<!--Present data for specific patient-->
<p id="notice"><%= notice %></p>

<div class="container col-md-12">
<h1>Patient Data for <%= @patient.name%></h1>

  <table style="width:700px">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">MRN</th>
      <th scope="col">Date of Birth</th>
      <th scope="col">Email</th>
    </tr>
    <tr>
      <th scope="row" class="spec"><%= @patient.name %></th>
      <td class="col-md-3"><%= @patient.mrn %></td>
      <td class="col-md-3"><%= @patient.dob %></td>
      <td class="col-md-3"><%= @patient.email %></td>
    </tr>
  </table>

  <div>
    <% @parsed_data.each do |data| %>
    <h6><%= data["date"] %></h6>
    <table>
      <thead>
        <tr>
          <th scope="col">Activity</th>
          <th scope="col">Group</th>
          <th scope="col">Start Time</th>
          <th scope="col">End Time</th>
          <th scope="col">Duration</th>
          <th scope="col">Distance</th>
          <th scope="col">Steps</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% data["segments"]["activities"].each do |activity| %>
          <th scope="row" class="spec"></th>
          <td class="col-md-1"><%= activity["activity"] %></td>
          <td class="col-md-1"><%= activity["group"] %></td>
          <td class="col-md-1"><%= activity["startTime"] %></td>
          <td class="col-md-1"><%= activity["endTime"] %></td>
          <td class="col-md-1"><%= activity["duration"] %></td>
          <td class="col-md-1"><%= activity["distance"] %></td>
          <td class="col-md-1"><%= activity["steps"] %></td>
        <% end %>
      </tbody>
    </table>
    <% end %>
  </div>

  <button class="btn btn-default">
    <%= link_to 'Edit', edit_patient_path(@patient) %>
  </button>
  <button class="btn btn-default">
    <%= link_to 'Back', patients_path %>
  </button>
</div>
