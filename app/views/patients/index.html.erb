<nav class="navbar navbar-default">
  <div class="navbar-header">
    <a class="navbar-brand" href="/">
      Stepmates
    </a>
  </div>
  <button class="btn btn-default navbar-btn navbar-right" style="margin-right: 30px">
    <%= link_to 'Log Out', logout_path %>
  </button>
</nav>

<form class="navbar-form navbar-left" role="search">
  <%= form_tag patients_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>
</form>

<!--Show all the patient data-->
<p id="notice"><%= notice %></p>
<div class="container col-md-12">
<h1>Listing Patients</h1>

  <table id="mytable" cellspacing="0">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Mrn</th>
        <th scope="col">Dob</th>
        <th scope="col">Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <th scope="row" class="spec"><%= patient.name %></td>
          <td class="col-md-2"><%= patient.mrn %></td>
          <td class="col-md-1"><%= patient.dob %></td>
          <td class="col-md-2"><%= patient.email %></td>
          <td class="col-md-2"><%= link_to 'Individual Data', patient %></td>
          <td class="col-md-1"><%= link_to 'Update', edit_patient_path(patient) %></td>
          <td class="col-md-2"><%= link_to 'Remove Patient', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button class="btn btn-default">
    <%= link_to 'Back', '/' %>
  </button>
</div>